@model IEnumerable<MVC_CRUD.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.Raw(TempData["Message"])

<p>
    @Html.ActionLink("Create New", "Create","Create", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentFees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentCity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentFees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentCity)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StudentId }, new { @class = "btn btn-primary" })
                |
                @Html.ActionLink("Details", "Details", new { id = item.StudentId }, new { @class = "btn btn-primary" })
                |
                @Html.ActionLink("Delete", "Delete", new { id = item.StudentId }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
